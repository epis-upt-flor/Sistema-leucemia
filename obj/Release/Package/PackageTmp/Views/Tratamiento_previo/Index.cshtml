@model IEnumerable<Sistema_Leucemia_v2.Models.Paciente>

@{
    ViewBag.Seccion = "Condiciones previas";
    ViewBag.SeccionL = "";
    ViewBag.Subseccion1 = "Tratamientos previos";
    ViewBag.Subseccion1L = "Tratamiento_previo";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Lista de Tratamientos previos";

}

<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->
                <div>
                    <a class="btn btn-teal me-2 my-1" href="~/Tratamiento_previo/Create"><b>Registrar</b></a>
                </div>
                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.hc)</th>
                            <th>@Html.DisplayNameFor(model => model.nombres)</th>
                            <th>Apellidos</th>
                            <th>@Html.DisplayNameFor(model => model.sexo)</th>
                            <th>Edad</th>
                            <th>Nombre</th>
                            <th>Grado</th>
                            <th>F.Inicio</th>
                            <th>F.Fin</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.hc)</th>
                            <th>@Html.DisplayNameFor(model => model.nombres)</th>
                            <th>Apellidos</th>
                            <th>@Html.DisplayNameFor(model => model.sexo)</th>
                            <th>Edad</th>
                            <th>Nombre</th>
                            <th>Grado</th>
                            <th>F.Inicio</th>
                            <th>F.Fin</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dni)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ap_paterno) @Html.DisplayFor(modelItem => item.ap_materno)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sexo)
                                </td>
                                <td>
                                    22
                                </td>
                                <td>
                                    Leucemia Linfática Aguda
                                </td>
                                <td>
                                    Primer grado
                                </td>
                                <td>
                                    05/08/2002
                                </td>
                                <td>
                                    22/05/2003
                                </td>
                                <td>

                                    <a class="btn btn-indigo btn-xs" href="~/Tratamiento_previo/Edit/@item.idPaciente"><i data-feather="edit"></i>Editar</a>
                                    <a class="btn btn-yellow btn-xs" href="~/Tratamiento_previo/Details/@item.idPaciente"><i data-feather="more-vertical"></i>Detalles</a>


                                </td>

                            </tr>
                        }
                    <tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>
