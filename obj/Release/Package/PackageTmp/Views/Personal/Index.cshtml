@model IEnumerable<Sistema_Leucemia_v2.Models.Personal>

@{
    ViewBag.Seccion = "Personal";
    ViewBag.SeccionL = "Personal";
    ViewBag.Subseccion1 = "";
    ViewBag.Subseccion1L = "";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Lista del Personal";

}

<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->

                <p>
                    <a class="btn btn-teal me-2 my-1" href="~/Personal/Create"><b>Registrar</b></a>
                </p>
                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.apellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.tipo)</th>
                            <th>@Html.DisplayNameFor(model => model.sexo)</th>
                            <th>@Html.DisplayNameFor(model => model.fecha_nac)</th>
                            <th>@Html.DisplayNameFor(model => model.turno)</th>
                            <th>@Html.DisplayNameFor(model => model.estado)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.apellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.tipo)</th>
                            <th>@Html.DisplayNameFor(model => model.sexo)</th>
                            <th>@Html.DisplayNameFor(model => model.fecha_nac)</th>
                            <th>@Html.DisplayNameFor(model => model.turno)</th>
                            <th>@Html.DisplayNameFor(model => model.estado)</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>



                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dni)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.apellidos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tipo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sexo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha_nac)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.turno)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>
                                <td>
                                    <a class="btn btn-cyan btn-xs" href="~/Personal/CargarFoto"><i data-feather="save"></i>Cargar foto</a>
                                    <a class="btn btn-indigo btn-xs" href="~/Personal/Edit/@item.idPersonal"><i data-feather="edit"></i>Editar</a>
                                    <a class="btn btn-yellow btn-xs" href="~/Personal/Details/@item.idPersonal"><i data-feather="more-vertical"></i>Detalles</a>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>
