@model IEnumerable<Sistema_Leucemia_v2.Models.Medicamento>

@{
    ViewBag.Seccion = "Medicamentos";
    ViewBag.SeccionL = "Medicamento";
    ViewBag.Subseccion1 = "";
    ViewBag.Subseccion1L = " ";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Lista de Medicamentos";

}

<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->

                <p>
                    <a class="btn btn-teal me-2 my-1" href="~/Medicamento/Create"><b>Registrar</b></a>
                </p>
                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.abreviacion)</th>
                            <th>@Html.DisplayNameFor(model => model.descripccion)</th>
                            <th>@Html.DisplayNameFor(model => model.componente)</th>
                            <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                            <th>@Html.DisplayNameFor(model => model.medida)</th>
                            <th>@Html.DisplayNameFor(model => model.estado)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.abreviacion)</th>
                            <th>@Html.DisplayNameFor(model => model.descripccion)</th>
                            <th>@Html.DisplayNameFor(model => model.componente)</th>
                            <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                            <th>@Html.DisplayNameFor(model => model.medida)</th>
                            <th>@Html.DisplayNameFor(model => model.estado)</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>



                    <tbody>



                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.abreviacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.componente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.medida)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>
                                <td>
                                    <a class="btn btn-indigo btn-xs" href="~/Medicamento/Edit/@item.idMedicamento"><i data-feather="edit"></i>Editar</a>
                                    <a class="btn btn-yellow btn-xs" href="~/Medicamento/Details/@item.idMedicamento"><i data-feather="more-vertical"></i>Detalles</a>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>
