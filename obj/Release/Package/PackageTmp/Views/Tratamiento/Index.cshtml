@model IEnumerable<Sistema_Leucemia_v2.Models.Paciente>

@{
    ViewBag.Seccion = "Diagnósticos y tratamientos";
    ViewBag.SeccionL = "";
    ViewBag.Subseccion1 = "Tratamientos";
    ViewBag.Subseccion1L = " Tratamiento";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Listar los Tratamientos";

}
<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->

                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.hc)</th>
                            <th>@Html.DisplayNameFor(model => model.nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.ap_paterno)</th>
                            <th>@Html.DisplayNameFor(model => model.ap_materno)</th>
                            <th>Diagnóstico</th>
                            <th>@Html.DisplayNameFor(model => model.sexo)</th>
                            <th>Edad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.hc)</th>
                            <th>@Html.DisplayNameFor(model => model.nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.ap_paterno)</th>
                            <th>@Html.DisplayNameFor(model => model.ap_materno)</th>
                            <th>Diagnóstico</th>
                            <th>@Html.DisplayNameFor(model => model.sexo)</th>
                            <th>Edad</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.dni)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ap_paterno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ap_materno)
                            </td>
                            <td>
                                Diagnóstico 1
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sexo)
                            </td>
                            <td>
                                22
                            </td>
                            <td>
                                <a class="btn btn-yellow btn-xs" href="~/Tratamiento/Details2/@item.idPaciente"><i data-feather="more-vertical"></i>Detalles</a>
                                <a class="btn btn-purple btn-xs" href="~/Tratamiento/VerTratamiento/@item.idPaciente"><i data-feather="eye"></i>Ver</a>
                            </td>

                        </tr>
                        }
                    <tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>

