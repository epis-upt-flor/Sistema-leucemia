@model IEnumerable<Sistema_Leucemia_v2.Models.Diagnostico>

@{
    ViewBag.Seccion = "Diagnósticos y tratamientos";
    ViewBag.SeccionL = "";
    ViewBag.Subseccion1 = "Diagnósticos";
    ViewBag.Subseccion1L = " Diagnostico ";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Diagnósticos del paciente";

}

<
<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->

                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Paciente.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.Personal.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.condicion)</th>
                            <th>@Html.DisplayNameFor(model => model.observacion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Paciente.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.Personal.dni)</th>
                            <th>@Html.DisplayNameFor(model => model.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.condicion)</th>
                            <th>@Html.DisplayNameFor(model => model.observacion)</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>



                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Paciente.dni)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Personal.dni)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.condicion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.observacion)
                                </td>
                                <td>
                                    <a class="btn btn-purple btn-xs" href="~/Diagnostico/Details/@item.idDiagnostico">Tratatamiento<i data-feather="arrow-right-circle"></i></a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>
<div>
    <a class="btn btn-cyan me-2 my-1" href="~/Diagnostico/Index"><b><i data-feather="arrow-left-circle"></i>  Regresar</b></a>
</div>