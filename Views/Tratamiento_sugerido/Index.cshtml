@model IEnumerable<Sistema_Leucemia_v2.Models.Tratamiento_sugerido>

@{
    ViewBag.Seccion = "Tratamientos sugeridos";
    ViewBag.SeccionL = "";
    ViewBag.Subseccion1 = "Tratamientos sugeridos";
    ViewBag.Subseccion1L = " Tratamiento_sugerido ";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Listar Tratamientos sugeridos";

}

<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->

                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Diagnostico.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.protocolo)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Diagnostico.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.protocolo)</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>



                    <tbody>



                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Diagnostico.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.duracion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.protocolo)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.idTratamiento_sugerido }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.idTratamiento_sugerido }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idTratamiento_sugerido })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>
