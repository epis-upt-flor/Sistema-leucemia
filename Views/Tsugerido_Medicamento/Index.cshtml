@model IEnumerable<Sistema_Leucemia_v2.Models.Tsugerido_Medicamento>

@{
    ViewBag.Seccion = "Tratamientos sugeridos";
    ViewBag.SeccionL = "";
    ViewBag.Subseccion1 = "Medicamentos del tratamiento sugerido";
    ViewBag.Subseccion1L = " Tsugerido_medicamento ";
    ViewBag.Descripcion = "";
    ViewBag.Subseccion = "Listar los Medicamentos del tratamiento sugerido ";

}

<div class="col-lg-12">
    <!-- Avatar Sizing-->
    <div id="sizing">
        <div class="card mb-12">
            <div class="card-header">@Html.Display("Subseccion")</div>
            <div class="card-body">
                <!-- Component Preview-->


                <p>
                    <a class="btn btn-teal me-2 my-1" href="~/Paciente/Create"><b>Registrar</b></a>
                </p>
                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Tratamiento_sugerido.duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.codigo_med)</th>
                            <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                            <th>@Html.DisplayNameFor(model => model.medida)</th>
                            <th>@Html.DisplayNameFor(model => model.recurrencia)</th>
                            <th>@Html.DisplayNameFor(model => model.fecha_inicio)</th>
                            <th>@Html.DisplayNameFor(model => model.fecha_fin)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Tratamiento_sugerido.duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.codigo_med)</th>
                            <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                            <th>@Html.DisplayNameFor(model => model.medida)</th>
                            <th>@Html.DisplayNameFor(model => model.recurrencia)</th>
                            <th>@Html.DisplayNameFor(model => model.fecha_inicio)</th>
                            <th>@Html.DisplayNameFor(model => model.fecha_fin)</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>



                    <tbody>



                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tratamiento_sugerido.duracion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codigo_med)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.medida)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.recurrencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha_inicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha_fin)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.idTsugerido_Medicamento }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.idTsugerido_Medicamento }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idTsugerido_Medicamento })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- Avatar Status Indicators-->

</div>
